<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">
        <link rel="stylesheet" type="text/css" href="../css/controlBar.css">
        <link rel="stylesheet" type="text/css" href="../css/boardStyle.css">
        <link rel="stylesheet" type="text/css" href="../css/bootstrap.css">
        
        <title>Document</title>
    </head>
    <body>
        <div id="container">
            <nav>
                <div id="buttons">
                    <div id="minimize">
                        <span>-</span>
                    </div>
                    <div id="close">
                        <span>&times;</span>
                    </div>
                </div>
            </nav>
            <div class="board-register">
                <div class="banniere">
                    <img src="../img/ban2.jpg" alt="">
                </div>
                <div class="container">
                    <!-- Contact form -->
                    <form>
                        <p class="h3 mb-4">Enregistrer un projet</p>
                        <div class="md-form">
                            <i class="fa fa-user prefix grey-text"></i>
                            <input type="text" id="name" class="form-control" placeholder="Project name">
                        </div>

                        <div class="md-form">
                            <i class="fa fa-envelope prefix grey-text"></i>
                            <input type="text" id="type" class="form-control" placeholder="Project type">
                        </div>

                        <div class="md-form">
                            <i class="fa fa-pencil prefix grey-text"></i>
                            <textarea type="text" id="description" class="form-control" style="height: 100px" placeholder="Description"></textarea>
                        </div>

                        <div class="text-center">
                            <button id="btnEnregistrer" class="btn btn-block btn-lg">Enregistrer</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <script src="../js/controlBar.js"></script>
        <script src="../js/boards.js"></script>
    </body>
</html>